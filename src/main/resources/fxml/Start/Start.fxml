<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane alignment="CENTER"
          id="gridPane"
          maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="800.0" prefWidth="1000.0"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/21"
          fx:controller="com.ser515.ScrumRunner.controller.ButtonActionsController"
          stylesheets="@../../css/home.css">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <!--<ImageView>
            <image>
                <Image url="@../../assets/icon.png" />
            </image>
        </ImageView>-->
        <Button
                fx:id="btnStart"
                prefWidth="100"
                maxWidth="130"
                styleClass="btnStart"
                alignment="CENTER_RIGHT"
                contentDisplay="CENTER"
                mnemonicParsing="false" text="Start Game"
                onAction="#startGame"
                GridPane.columnIndex="1"
                GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
                </Button>
               
        <Button fx:id="btnEnd"
                prefHeight="50"
                prefWidth="100"
                maxWidth="120"
                mnemonicParsing="false"
                styleClass="btnEnd"
                text="Exit"
                onAction="#exitGame"
                GridPane.columnIndex="3"
                GridPane.halignment="RIGHT"
                GridPane.rowIndex="1" />
        <Label styleClass="labelTitle" alignment="CENTER" contentDisplay="CENTER" style="-fx-text-alignment: center;" text="ScrumRunner" textAlignment="CENTER" textFill="WHITE" textOverrun="WORD_ELLIPSIS" GridPane.columnIndex="2" GridPane.halignment="CENTER">            <font>
            <Font size="30.0" />
        </font>
        </Label>
        <Button
        fx:id="btnDiceRoll"
        prefWidth="100"
        maxWidth="130"
        styleClass="btnStart"
        contentDisplay="CENTER"
        mnemonicParsing="false" text="Dice"
        onAction="#btnDiceRoll">
        </Button>
    </children>
</GridPane>
